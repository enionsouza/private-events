<h1><%= @event.title %></h1>
<h2>By <%=link_to"#{@user.username}", '/users/' + @user.id.to_s %> <h2>
<p>Date: <%= @event.date.to_date%> </p>
<p>Time: <%= @event.date.strftime("%I:%M%p")%> </p>
<p>Where?: <%= @event.location%> </p>
<h2>Guests List</h2>
<table>
    <%@attendees.each do |attendee|%>
            <tr>
                <td><%= attendee.user.username%></td>
            </tr>
    <%end%>
</table>

<%=link_to "Home", root_path%>
<%=link_to "Back", :back%>
<br/>

<% if @owner %>
    <%= link_to "Edit", edit_event_path(@event)%>
    <%= link_to "Delete", event_path(@event), method: :delete %>
<% else %>
    <% if @attending %>
        <%= link_to  "I won't attend this Event", root_path + 'attendees/' + @event.id.to_s, method: :delete %>
    <% else %>
        <%= link_to  "Attend this Event", attendees_create_path(event_id: @event.id) %>
    <% end %>
<% end %>