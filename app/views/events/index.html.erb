<h1>All events</h1>

<div>




<h3>Upcoming events</h3>
    <table>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Location</th>
        </tr>
            <%Event.upcoming.each do |event|%>
        <tr>
            <td><%= event.title%></td>
            <td><%= event.date%></td>
            <td><%= event.location%></td>
            <td><%= link_to "See more", event_path(event)%>
        </tr>
            <%end%>
    </table>  
<h3>Past events</h3>
            <table>
                    

                <tr>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Location</th>
                </tr>
                    <%Event.past.each do |event|%>
                <tr>
                    <td><%= event.title%></td>
                    <td><%= event.date%></td>
                    <td><%= event.location%></td>
                    <td><%= link_to "See more", event_path(event)%>
                </tr>
                    <%end%>
            </table>
    <h3> Users </h3>
            <table>
                    <%@users.each do |user|%>
                <tr>
                    <td><%= user.username%></td>
                    <td><%= link_to 'See profile', '/users/' + user.id.to_s %></td>
                </tr>
                    <%end%>
            </table>

<div>
<% if user_signed_in? %>
    <%= link_to  "Logout",  destroy_user_session_path, method: :delete %>
<% end %>