<h1>All events</h1>

<div>
    <table>
        <tr>
            <table>
                <tr>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Location</th>
                </tr>
                    <%@events.each do |event|%>
                <tr>
                    <td><%= event.title%></td>
                    <td><%= event.date%></td>
                    <td><%= event.location%></td>
                    <td><%= link_to "See more", event_path(event)%>
                </tr>
                    <%end%>
            </table>
        </tr>
        <tr>
            <table>
                <tr>
                    <th>Users</th>
                </tr>
                    <%@users.each do |user|%>
                <tr>
                    <td><%= user.username%></td>
                    <td><%= link_to "See profile", '/users/' + user.id.to_s %>
                </tr>
                    <%end%>
            </table>
        </tr>
    <table>
<div>
<% if user_signed_in? %>
    <%= link_to  "Logout",  destroy_user_session_path, method: :delete %>
<% end %>